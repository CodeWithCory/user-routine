{
  "name": "spa-routine",
  "version": "4.3.1",
  "description": "Automated routines for single-page applications (SPAs), useful for end-to-end-testing and guided tutorials. Small, portable, and easy to use. Click buttons, fill values, await results, guide users, etc.",
  "main": "./lib/spa-routine.min.js",
  "types": "./lib/spa-routine.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:blob && npm run build:template && npm run build:demo",
    "build:blob": "webpack --config webpack.config.blob.cjs",
    "build:demo": "webpack --config webpack.config.demo.cjs && node utils/update-demo.cjs",
    "build:lib": "webpack --config webpack.config.min.cjs",
    "build:local": "npm run build:lib && npm run build:demo",
    "build:template": "node utils/make-template.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CoryLR/spa-routine.git"
  },
  "author": "Cory Leigh Rahman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CoryLR/spa-routine/issues"
  },
  "homepage": "https://github.com/CoryLR/spa-routine#readme",
  "keywords": [
    "JavaScript",
    "SPA",
    "Single-page application",
    "TypeScript",
    "automated test",
    "check",
    "click",
    "e2e",
    "end to end",
    "spa-routine",
    "test"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.2.0",
    "css-loader": "^6.7.1",
    "flickity": "^3.0.0",
    "highlight.js": "^11.6.0",
    "html-webpack-plugin": "^5.5.0",
    "minify": "^9.1.0",
    "node-html-parser": "^6.1.1",
    "open": "^8.4.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "flickity-hash": "^2.0.1"
  }
}
